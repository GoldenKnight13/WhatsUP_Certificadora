<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.whatsup_certifier.CertifierController"
            prefHeight="400.0" prefWidth="600.0">

    <Label layoutX="180" layoutY="30" text="Certifier Log">
        <font>
            <Font name="Arial Rounded MT Bold" size="23"/>
        </font>
    </Label>

    <!--Container of the log entries-->
    <ScrollPane fx:id="Log"  layoutX="30" layoutY="70" prefHeight="256" prefWidth="418"
                fitToWidth="true">

        <!--Log entry-->
        <content>
            <VBox fx:id="logRecord" prefWidth="400" prefHeight="250"/>
        </content>

    </ScrollPane>


</AnchorPane>
